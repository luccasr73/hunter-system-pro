                    <p class="lead text-center">Nossas vagas disponiveis</p>
                </div>
                <%- //JSON.stringify(vagas) %>
                <div class="row projects">
                   
                <%if(vagas){%>
                    <% vagas.forEach(vaga=>{%> 
                        <div class="col-12 col-lg-4 item">
                            <img class="img-fluid" src="images/DANONE_LOGO.png" style="max-width: 338px;">
